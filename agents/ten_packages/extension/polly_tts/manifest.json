{
    "type": "extension",
    "name": "polly_tts",
    "version": "0.4.0",
    "dependencies": [
        {
            "type": "system",
            "name": "ten_runtime_python",
            "version": "0.4"
        }
    ],
    "package": {
        "include": [
            "manifest.json",
            "property.json",
            "BUILD.gn",
            "**.tent",
            "**.py",
            "README.md",
            "tests/**"
        ]
    },
    "api": {
        "property": {
            "region": {
                "type": "string"
            },
            "access_key": {
                "type": "string"
            },
            "secret_key": {
                "type": "string"
            },
            "engine": {
                "type": "string"
            },
            "voice": {
                "type": "string"
            },
            "sample_rate": {
                "type": "int64"
            },
            "lang_code": {
                "type": "string"
            }
        },
        "data_in": [
            {
                "name": "text_data",
                "property": {
                    "text": {
                        "type": "string"
                    }
                }
            }
        ],
        "cmd_in": [
            {
                "name": "flush"
            }
        ],
        "cmd_out": [
            {
                "name": "flush"
            }
        ],
        "audio_frame_out": [
            {
                "name": "pcm_frame"
            }
        ]
    }
}