{
    "type": "extension",
    "name": "azure_tts",
    "version": "0.1.0",
    "language": "cpp",
    "dependencies": [
        {
            "type": "system",
            "name": "rte_runtime",
            "version": "0.1.0"
        }
    ],
    "api": {
        "property": {
            "azure_subscription_key": {
                "type": "string"
            },
            "azure_subscription_region": {
                "type": "string"
            },
            "azure_synthesis_voice_name": {
                "type": "string"
            }
        },
        "data_in": [
            {
                "name": "text_data",
                "property": {
                    "text": {
                        "type": "string"
                    }
                }
            }
        ],
        "cmd_in": [
            {
                "name": "flush"
            }
        ],
        "cmd_out": [
            {
                "name": "flush"
            }
        ],
        "pcm_frame_out": [
            {
                "name": "pcm_frame"
            }
        ]
    }
}