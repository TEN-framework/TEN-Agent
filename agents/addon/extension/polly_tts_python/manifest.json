{
    "type": "extension",
    "name": "polly_tts",
    "version": "0.1.0",
    "language": "python",
    "dependencies": [
        {
          "type": "system",
          "name": "rte_runtime_python",
          "version": "0.2.0"
        }
    ],
    "api": {
        "property": {
            "region": {
                "type": "string"
            },
            "access_key": {
                "type": "string"
            },
            "secret_key": {
                "type": "string"
            },
            "engine": {
                "type": "string"
            },
            "voice": {
                "type": "string"
            },
            "sample_rate": {
                "type": "int64"
            },
            "lang_code": {
                "type": "string"
            }
        },
        "data_in": [
            {
                "name": "text_data",
                "property": {
                    "text": {
                        "type": "string"
                    }
                }
            }
        ],
        "cmd_in": [
            {
                "name": "flush"
            }
        ],
        "cmd_out": [
            {
                "name": "flush"
            }
        ],
        "pcm_frame_out": [
            {
                "name": "pcm_frame"
            }
        ]
    }
}